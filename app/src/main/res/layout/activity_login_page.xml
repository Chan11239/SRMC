<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login"
    android:layout_width="410dp"
    android:layout_height="800dp"
    android:clipToOutline="true"
    android:background="#FFFFFF">

    <View
        android:id="@+id/ellipse_1"
        android:layout_width="144dp"
        android:layout_height="151dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="-46dp"
        android:layout_marginTop="-6dp"
        android:background="@drawable/shape" />

    <View
        android:id="@+id/ellipse_2"
        android:layout_width="153dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="-61dp"
        android:background="@drawable/shape" />

    <View
        android:id="@+id/logo_white"
        android:layout_width="232dp"
        android:layout_height="193dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="91dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="151dp"
        android:background="@drawable/logo_white"
        />

    <!-- Auto layout, variables, and unit scale are not yet supported -->


    <EditText
        android:id="@+id/edit_email"
        android:layout_width="235dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="357dp"
        android:background="#A3001C"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:singleLine="true"
        android:visibility="visible" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="235dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="407dp"
        android:background="#A3001C"
        android:elevation="4dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="true"
        android:visibility="visible" />

    <TextView
        android:id="@+id/forgot_pass"
        android:layout_width="109dp"
        android:layout_height="18dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="152dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="456dp"
        android:text="@string/forgot_pass"
        android:textAppearance="@style/forgot_pass"
        android:gravity="top"
        />


    <Button
        android:id="@+id/btn_login"
        android:layout_width="99dp"
        android:layout_height="37dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="157dp"
        android:layout_marginTop="487dp"
        android:backgroundTint="@drawable/button_background_color"
        android:elevation="4dp"
        android:onClick="click_login"
        android:text="Sign In" />


</RelativeLayout>